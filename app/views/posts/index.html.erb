<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th width="200">Title</th>
      <th width="700">Body</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title.first(50) %></td>
        <td><%= post.body.first(80) %></td>
        <td><ul class="button-group">
				        <%= button_to "Show", post, :id => "show-post-btn", class: "button", :method => :get %>
                <%= button_to 'Edit', edit_post_path(post), class: "button", :method => :get %>
     	 	        <%= button_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :id => "destroy-post-btn", :class => "button" %></ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<i><span class="fa fa fa-cog fa-3x" aria-hidden="true"></i>
